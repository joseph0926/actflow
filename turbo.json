{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "format:check": { "cache": true, "outputs": [] },
    "lint": { "cache": true, "outputs": [] },
    "typecheck": { "cache": true, "outputs": [] },
    "test": {
      "cache": true,
      "outputs": [],
      "inputs": ["src/**", "vitest.config.*"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".tsbuildinfo", "tsconfig.tsbuildinfo", ".next"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsconfig.build.json"]
    },
    "clean": { "cache": false }
  }
}
