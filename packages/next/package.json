{
  "name": "@actflow/next",
  "version": "0.2.3",
  "private": false,
  "type": "module",
  "sideEffects": false,
  "description": "Next.js integration for actflow: Server Actions, forms, and caching utilities",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "vitest run"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.2.0",
    "zod": ">=3.22.0"
  },
  "dependencies": {
    "@actflow/core": "workspace:*",
    "@actflow/server": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
